<div class="contact_show">
  <div class="welcome">
    <p>管理者<%= @admin_user.admin_name %>さんとしてログイン中</p>
  </div>

  <h2>商標管理画面</h2>

  <div class="titles">
    <div class="tm">商標名</div>
    <div class="invest">ユーザー名</div>
    <div class="apply">ステータス</div>
    <div class="judge">アクション</div>
    <div class="register">編集ボタン</div>
  </div>

  <% @all_trademarks.each do |trademark| %>
    <div class="tmcontents">
      <div class="contactsum">
        <div class="tm">
          <%= trademark.tm_name %>
        </div>

        <div class="invest">
          <%= trademark.user.user_name %>さん
        </div>

        <div class="apply">
          <div class="on_the_proccess">
            <% if trademark.state.present? && trademark.state.status_registration == true %>
              <p>登録</p>
            <% elsif trademark.state.present? && trademark.state.status_judge == true %>
              <p>審査</p>
            <% elsif trademark.state.present? && trademark.state.status_apply == true %>
              <p>出願</p>
            <% elsif trademark.state.present? && trademark.state.status_investigation == true %>
              <p>調査</p>
            <% end %>
          </div>
        </div>

        <div class="judge">
          アクション名
        </div>


        <div class="register">
          <%= link_to "編集", trademark_path(trademark.id) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
